  <!-- JAVASCRIPT -->
  <script>
    // Back to Top Butonu
    const backToTopBtn = document.getElementById('back-to-top');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        backToTopBtn.classList.add('show');
      } else {
        backToTopBtn.classList.remove('show');
      }
    });
    backToTopBtn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });

    // Hamburger Menu
    const hamburger = document.getElementById("hamburger");
    const navbarMenu = document.getElementById("navbar-menu");
    hamburger.addEventListener("click", () => {
      navbarMenu.classList.toggle("show");
    });
    const menuLinks = navbarMenu.querySelectorAll("a");
    menuLinks.forEach(link => {
      link.addEventListener("click", () => {
        navbarMenu.classList.remove("show");
      });
    });

    // Fade-Up Animation (Intersection Observer)
    const faders = document.querySelectorAll('.fade-up');
    const appearOptions = {
      threshold: 0.2,
      rootMargin: "0px 0px -50px 0px"
    };
    const appearOnScroll = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (!entry.isIntersecting) return;
        entry.target.classList.add('visible');
        observer.unobserve(entry.target);
      });
    }, appearOptions);
    faders.forEach(fader => {
      appearOnScroll.observe(fader);
    });

    // ÜRÜN DETAY MODALI
    const modal = document.getElementById("product-modal");
    const modalTitle = document.getElementById("modal-title");
    const modalImage = document.getElementById("modal-image");
    const modalDesc = document.getElementById("modal-description");
    const closeModal = document.getElementById("close-modal");

    document.querySelectorAll(".product-card").forEach(card => {
      card.addEventListener("click", function() {
        modalTitle.textContent = this.dataset.name;
        modalImage.src = this.dataset.image;
        modalDesc.textContent = this.dataset.description;
        modal.style.display = "flex";
      });
    });

    closeModal.addEventListener("click", function() {
      modal.style.display = "none";
    });
    window.addEventListener("click", function(e) {
      if (e.target === modal) {
        modal.style.display = "none";
      }
    });

    // KİŞİYE ÖZEL SİPARİŞ FORMU
    const customOrderForm = document.getElementById('customOrderForm');
    const serviceSelect = document.getElementById('service');
    const serviceOptions = document.querySelectorAll('.service-option');
    // Sipariş Başarılı Modal
    const successModal = document.getElementById("success-modal");
    const successModalDesc = document.getElementById("success-modal-description");
    const successCloseModal = document.getElementById("success-close-modal");

    customOrderForm.addEventListener('submit', (e) => {
      e.preventDefault();

      // Form alanlarını alalım
      const fullName = document.getElementById('fullName').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const emailOrder = document.getElementById('emailOrder').value.trim();
      const service = serviceSelect.value;
      const orderDetails = document.getElementById('orderDetails').value.trim();

      // Seçilen tasarım
      let selectedDesign = "";
      const activeOption = document.querySelector(`.service-option[data-service="${service}"]`);
      if (activeOption) {
        const checkedRadio = activeOption.querySelector('input[type="radio"]:checked');
        if (checkedRadio) {
          selectedDesign = checkedRadio.value;
        }
      }

      // Basit doğrulama
      if (
        !fullName ||
        !phone ||
        !emailOrder ||
        !service ||
        !selectedDesign ||
        !orderDetails
      ) {
        alert("Lütfen tüm zorunlu alanları eksiksiz giriniz.");
      } else {
        // Modal içeriğini güncelle
        successModalDesc.textContent =
          `Ad Soyad: ${fullName}\nTelefon: ${phone}\nE-posta: ${emailOrder}\n` +
          `Hizmet: ${service}\nTasarım: ${selectedDesign}\nDetaylar: ${orderDetails}`;

        // Sipariş Başarılı Modalını aç
        successModal.style.display = "flex";

        // Formu resetle
        customOrderForm.reset();
        serviceOptions.forEach(opt => opt.classList.remove('active'));
      }
    });

    // Sipariş Başarılı Modal Kapatma
    successCloseModal.addEventListener("click", function() {
      successModal.style.display = "none";
    });
    window.addEventListener("click", function(e) {
      if (e.target === successModal) {
        successModal.style.display = "none";
      }
    });

    // Hizmet değiştikçe ilgili tasarım seçeneklerini göster/gizle
    serviceSelect.addEventListener('change', function() {
      serviceOptions.forEach(opt => {
        opt.classList.remove('active');
        const radios = opt.querySelectorAll('input[type="radio"]');
        radios.forEach(r => (r.checked = false));
      });
      const selectedValue = this.value;
      if (selectedValue) {
        const matchingOption = document.querySelector(`.service-option[data-service="${selectedValue}"]`);
        if (matchingOption) {
          matchingOption.classList.add('active');
        }
      }
    });

    // İLETİŞİM FORMU
    const contactForm = document.getElementById('contactForm');
    // İletişim Başarılı Modal
    const contactModal = document.getElementById("contact-modal");
    const contactModalDesc = document.getElementById("contact-modal-description");
    const contactCloseModal = document.getElementById("contact-close-modal");

    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const nameValue = document.getElementById('name').value.trim();
      const emailValue = document.getElementById('email').value.trim();
      const messageValue = document.getElementById('message').value.trim();

      if (!nameValue || !emailValue || !messageValue) {
        alert("Lütfen tüm alanları doldurunuz.");
      } else {
        // Başarılı iletişim mesajını modalda göster
        contactModalDesc.textContent = "Mesajınız alınmıştır, teşekkür ederiz!";
        contactModal.style.display = "flex";

        // Formu resetle
        contactForm.reset();
      }
    });

    // İletişim Başarılı Modal Kapatma
    contactCloseModal.addEventListener("click", function() {
      contactModal.style.display = "none";
    });
    window.addEventListener("click", function(e) {
      if (e.target === contactModal) {
        contactModal.style.display = "none";
      }
    });
  </script>
</body>
</html>
