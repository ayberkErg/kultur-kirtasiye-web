    <!-- İLETİŞİM -->
    <section id="contact" class="fade-up" aria-labelledby="contact-title">
      <h2 id="contact-title">İletişim</h2>
      <div class="contact-container">
        <!-- İletişim Bilgileri -->
        <div class="contact-info">
